<Window x:Class="Cleaner.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Cleaner.App.ViewModels"
        Title="WinClean 95"
        Icon="pack://application:,,,/Assets/WinCleanLogo.ico"
        Height="900"
        MinWidth="500"
        MinHeight="300"
        Width="1200"
        Background="{StaticResource AppBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True"
        TextOptions.TextFormattingMode="Display">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid Margin="24" Background="{StaticResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"
                   Width="72"
                   Height="72"
                   Margin="0,-6,16,0"
                   VerticalAlignment="Top"
                   Source="pack://application:,,,/Assets/WinCleanLogo.png"
                   Stretch="Uniform"
                   SnapsToDevicePixels="True" />
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Grid>
                    <TextBlock Style="{StaticResource TitleText}" Text="WinClean 95" Foreground="#F4F6FF">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="-1" Y="0" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Style="{StaticResource TitleText}" Text="WinClean 95" Foreground="#F4F6FF">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="1" Y="0" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Style="{StaticResource TitleText}" Text="WinClean 95" Foreground="#F4F6FF">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="0" Y="-1" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Style="{StaticResource TitleText}" Text="WinClean 95" Foreground="#F4F6FF">
                        <TextBlock.RenderTransform>
                            <TranslateTransform X="0" Y="1" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                    <TextBlock Style="{StaticResource TitleText}" Text="WinClean 95">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#00A2E8" Offset="0" />
                                <GradientStop Color="#000080" Offset="1" />
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                </Grid>
                <TextBlock Style="{StaticResource SubtitleText}">
                    <Run Text="Safely cleans known temp, cache, and report files older than " />
                    <Run Text="{Binding PrimaryRetentionDaysDisplay}" FontWeight="SemiBold" />
                    <Run Text=" days. See Safety Rules below for more details." />
                </TextBlock>

            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Margin="0,0,24,0">
                    <TextBlock Style="{StaticResource SectionHeaderText}" Text="Found" />
                    <TextBlock FontWeight="SemiBold" Text="{Binding TotalBytesDisplay}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="0,0,24,0">
                    <TextBlock Style="{StaticResource SectionHeaderText}" Text="Selected" />
                    <TextBlock FontWeight="SemiBold" Text="{Binding SelectedBytesDisplay}" />
                </StackPanel>
                <Grid Grid.Column="2" Margin="0,0,16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="Status" />
                        <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource SecondaryTextBrush}" />
                        <TextBlock Text="{Binding ScanDuration}" Foreground="{StaticResource MutedTextBrush}" />
                    </StackPanel>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <Grid HorizontalAlignment="Center" MaxWidth="340" Width="340">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"
                                       FontSize="13"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       HorizontalAlignment="Center">
                                <Run Text="Scan files older than " />
                                <Run Text="{Binding RetentionDays}" FontWeight="SemiBold" />
                                <Run Text=" days" />
                            </TextBlock>
                            <Slider Grid.Row="1"
                                    Margin="0,6,0,0"
                                    HorizontalAlignment="Stretch"
                                    Minimum="1"
                                    Maximum="7"
                                    Value="{Binding RetentionDays, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                <Slider.Style>
                                    <Style TargetType="Slider" BasedOn="{StaticResource RetentionSlider}">
                                        <Setter Property="IsEnabled" Value="True" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsWorking}" Value="True">
                                                <Setter Property="IsEnabled" Value="False" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Slider.Style>
                            </Slider>
                        </Grid>
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Scan" Style="{StaticResource PrimaryActionButton}" Width="90" Margin="0,0,8,0" Command="{Binding ScanCommand}" />
                        <Button Content="Delete Files" Style="{StaticResource SecondaryActionButton}" Width="120" Margin="0,0,8,0" Command="{Binding CleanCommand}" />
                        <Button Content="Cancel" Style="{StaticResource SecondaryActionButton}" Width="90" Command="{Binding CancelCommand}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Style="{StaticResource CardBorder}" Margin="0,0,0,12">
            <Expander Header="Safety Rules" IsExpanded="{Binding SafetyRulesExpanded}">
                <ScrollViewer MaxHeight="140"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,6,0,0">
                    <StackPanel Margin="0,4,0,0">
                        <TextBlock Margin="0,0,0,6">
                            <Run Text="- Only known-safe temp/cache/report locations" />
                        </TextBlock>
                        <TextBlock Margin="0,0,0,6">
                            <Run Text="- Skips files modified in the last " />
                            <Run Text="{Binding RecentGuardHoursDisplay}" FontWeight="SemiBold" />
                            <Run Text=" hours" />
                        </TextBlock>
                        <TextBlock Margin="0,0,0,6">
                            <Run Text="- Targets items older than " />
                            <Run Text="{Binding PrimaryRetentionDaysDisplay}" FontWeight="SemiBold" />
                            <Run Text=" days (per category)" />
                        </TextBlock>
                        <TextBlock Margin="0,0,0,6">
                            <Run Text="- Compatibility Mode: " />
                            <Run Text="{Binding CompatibilityModeDisplay}" FontWeight="SemiBold" />
                            <Run Text="{Binding CompatibilityDetailsSuffix}" />
                        </TextBlock>
                        <TextBlock Margin="0,0,0,6">
                            <Run Text="- Cleanup is reversible (moves items to the Recycle Bin)" />
                        </TextBlock>
                        <TextBlock Margin="0,0,0,10">
                            <Run Text="- Empty the Recycle Bin for permanent deletion" />
                        </TextBlock>

                        <TextBlock Style="{StaticResource SectionHeaderText}" Text="Retention by category" Margin="0,0,0,4" />
                        <ItemsControl ItemsSource="{Binding RetentionRows}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="0,0,0,4">
                                        <TextBlock Text="{Binding Name}" Width="220" />
                                        <TextBlock Text="{Binding DaysDisplay}" FontWeight="SemiBold" />
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock Text="{Binding SafetyWarnings}" Margin="0,6,0,0" Foreground="{StaticResource MutedTextBrush}" />
                    </StackPanel>
                </ScrollViewer>
            </Expander>
        </Border>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource CardBorder}" Margin="0,0,12,0">
                <StackPanel TextElement.FontSize="13">
                    <TextBlock FontWeight="SemiBold" FontSize="14" Text="Categories" Margin="0,0,0,8" />
                        <ItemsControl ItemsSource="{Binding CategoryItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" Margin="0,2,0,2" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,12">
                            <Button Content="Select All" Style="{StaticResource SecondaryButton}" Width="96" Command="{Binding SelectAllCategoriesCommand}" Margin="0,0,8,0" />
                            <Button Content="Deselect All" Style="{StaticResource SecondaryButton}" Width="96" Command="{Binding DeselectAllCategoriesCommand}" />
                        </StackPanel>
                        <Border Height="1" Background="{StaticResource StrokeBrush}" Margin="0,4,0,10" />
                        <Button Content="ðŸ—‘ Empty Recycle Bin"
                                Command="{Binding EmptyRecycleBinCommand}"
                                FontSize="11"
                                Height="30"
                                Padding="10,4"
                                Width="200"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Center"
                                Margin="0,0,0,10">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource WarningActionButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsWorking}" Value="True">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding HasSelectedDrives}" Value="False">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Border Height="1" Background="{StaticResource StrokeBrush}" Margin="0,2,0,12" />
                        <Button Command="{Binding OpenSystemCleanupCommand}"
                                FontSize="11"
                                Height="30"
                                Padding="10,4"
                                Width="200"
                                HorizontalAlignment="Left"
                                HorizontalContentAlignment="Center"
                                Margin="0,0,0,10">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}" />
                                        </Trigger>
                                        <DataTrigger Binding="{Binding IsWorking}" Value="True">
                                            <Setter Property="IsEnabled" Value="False" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="&#xE7EF;"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="11"
                                           Margin="0,0,6,0" />
                                <TextBlock Text="System Cleanup" />
                            </StackPanel>
                        </Button>
                        <Border Height="1" Background="{StaticResource StrokeBrush}" Margin="0,2,0,12" />

                    <TextBlock FontWeight="SemiBold" FontSize="14" Text="Drives" Margin="0,2,0,8" />
                    <ItemsControl ItemsSource="{Binding DriveItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected}" Margin="0,2,0,2">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Root}" />
                                        <TextBlock Text="{Binding TotalDisplay}" Margin="8,0,0,0" Foreground="{StaticResource SecondaryTextBrush}" />
                                    </StackPanel>
                                </CheckBox>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock Text="Run a scan to detect drives."
                               Foreground="{StaticResource MutedTextBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DriveItems.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Style="{StaticResource SectionHeaderText}" Text="Files" />
                            <TextBlock Text="{Binding FindingsSummary}"
                                       Foreground="{StaticResource SecondaryTextBrush}"
                                       Margin="0,2,0,0"
                                       FontSize="12" />
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <DataGrid x:Name="FindingGrid"
                                  AutoGenerateColumns="False"
                                  ItemsSource="{Binding FindingItems}"
                                  CanUserAddRows="False"
                                  CanUserResizeColumns="True"
                                  IsReadOnly="False"
                                  SelectionMode="Extended"
                                  EnableRowVirtualization="True"
                                  EnableColumnVirtualization="False"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  ScrollViewer.CanContentScroll="True"
                                  HorizontalScrollBarVisibility="Auto"
                                  Loaded="FindingGrid_OnLoaded"
                                  DataContextChanged="FindingGrid_OnDataContextChanged">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="42" CanUserResize="True">
                                    <DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                                            <Setter Property="VerticalContentAlignment" Value="Center" />
                                            <Setter Property="Padding" Value="0" />
                                        </Style>
                                    </DataGridTemplateColumn.HeaderStyle>
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <CheckBox IsThreeState="True"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      ToolTip="Select or deselect all files"
                                                      PreviewMouseLeftButtonDown="AllFindingsHeaderCheckBox_OnPreviewMouseLeftButtonDown"
                                                      PreviewKeyDown="AllFindingsHeaderCheckBox_OnPreviewKeyDown"
                                                      IsChecked="{Binding DataContext.AllFindingsSelected, RelativeSource={RelativeSource AncestorType=DataGrid}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Binding="{Binding CategoryName}" Header="Category" Width="SizeToHeader" IsReadOnly="True" CanUserResize="True" />
                                <DataGridTextColumn Binding="{Binding DriveRoot}" Header="Drive" Width="SizeToHeader" IsReadOnly="True" CanUserResize="True" />
                                <DataGridTextColumn Binding="{Binding Path}" Header="Path" Width="420" ElementStyle="{StaticResource NoWrapCellText}" IsReadOnly="True" CanUserResize="True" />
                                <DataGridTextColumn Binding="{Binding SizeDisplay}" Header="Size" Width="Auto" IsReadOnly="True" CanUserResize="True" />
                                <DataGridTextColumn Binding="{Binding LastWriteDisplay}" Header="Last Write" Width="SizeToHeader" IsReadOnly="True" CanUserResize="True" />
                                <DataGridTextColumn Binding="{Binding Reason}" Header="Reason" Width="260" IsReadOnly="True" CanUserResize="True" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Text="Run a scan to list files."
                                   Foreground="{StaticResource MutedTextBrush}"
                                   FontSize="13"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False"
                                   Panel.ZIndex="1">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FindingItems.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Grid>
            </Border>

            <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,12,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" MaxWidth="420" Margin="0,0,16,0">
                        <TextBlock Style="{StaticResource SectionHeaderText}"
                                   Text="Cleanup Results"
                                   Margin="0,0,0,6" />
                        <TextBlock Text="{Binding CleanupSummaryLine}"
                                   Foreground="{StaticResource PrimaryTextBrush}"
                                   FontWeight="SemiBold"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,4" />
                    </StackPanel>
                    <ProgressBar Grid.Column="1"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 Height="10"
                                 IsIndeterminate="{Binding IsProgressIndeterminate}"
                                 Value="{Binding ProgressValue}"
                                 Minimum="0"
                                 Maximum="100">
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar" BasedOn="{StaticResource StatusProgressBar}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Setter Property="Height" Value="10" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsWorking}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
